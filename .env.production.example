# Production Environment Variables
# Copy this to your hosting platform (Render, Heroku, etc.)

# Server
PORT=5000
NODE_ENV=production

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/farmweather?retryWrites=true&w=majority

# Weather API
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# SMS Provider
SMS_API_KEY=your_termii_api_key
SMS_SENDER_ID=FarmWeather
SMS_API_URL=https://api.ng.termii.com/api/sms/send

# JWT
JWT_SECRET=your_generated_jwt_secret_64_characters_minimum

# Payment (Paystack LIVE keys for production)
PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key

# Frontend URL (your Vercel deployment)
FRONTEND_URL=https://your-app.vercel.app
