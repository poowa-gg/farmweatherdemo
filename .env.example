# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/farmweather

# Weather API (OpenWeatherMap)
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# SMS Provider (Termii or Africa's Talking)
SMS_API_KEY=your_termii_api_key_here
SMS_SENDER_ID=FarmWeather
SMS_API_URL=https://api.ng.termii.com/api/sms/send

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production

# Payment (Paystack for premium subscriptions)
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# Frontend URL (for payment callbacks)
FRONTEND_URL=http://localhost:3000
