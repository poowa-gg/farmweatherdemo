{
  "name": "farmweather-nigeria",
  "version": "1.0.0",
  "description": "Hyperlocal climate intelligence platform for Nigerian farmers",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "demo": "nodemon server/index-demo.js",
    "client": "npm --prefix client run dev",
    "build": "npm --prefix client install && npm --prefix client run build",
    "start": "node server/index.js",
    "install-all": "npm install && npm --prefix client install"
  },
  "keywords": [
    "agritech",
    "climate",
    "weather",
    "farming",
    "nigeria"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "mongoose": "^8.0.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
